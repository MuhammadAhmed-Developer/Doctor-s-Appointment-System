// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id                 String              @id @default(auto()) @map("_id") @db.ObjectId
  name               String
  email              String              @unique
  password           String
  role               String
  doctorProfile      DoctorProfile?      
  patientAppointments PatientAppointment[]
}

model DoctorProfile {
  id             String              @id @default(auto()) @map("_id") @db.ObjectId
  userId         String              @unique @db.ObjectId // Add @db.ObjectId here
  name           String
  email          String
  specialization String
  experience     String
  phoneno        String
  startTime      String  
  endTime        String  
  createdAt      DateTime            @default(now())
  updatedAt      DateTime            @updatedAt
  user           User                @relation(fields: [userId], references: [id])
  appointments   PatientAppointment[] 
}

model PatientAppointment {
  id               String    @id @default(auto()) @map("_id") @db.ObjectId
  userId           String              @db.ObjectId // Add @db.ObjectId here
  doctorProfileId  String              @db.ObjectId // Add @db.ObjectId here
  appointmentDate  String
  appointmentTime  String
  duration         String
  name             String
  phoneno          String
  email            String
  description      String
  user             User                @relation(fields: [userId], references: [id])
  doctorProfile    DoctorProfile       @relation(fields: [doctorProfileId], references: [id])
}